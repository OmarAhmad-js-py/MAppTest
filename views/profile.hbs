<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
  <link rel="stylesheet" href="../css/style.css" />

  <title>Document</title>
</head>

<body>
  <nav class="navbar navbar-expand-md">

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault"
      aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation"><i
        class="fas fa-bars"></i>
    </button>

    <div class="collapse navbar-collapse" id="navbarsExampleDefault">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/Profile">Profile</a>
        </li>

        <li class="nav-item active">
          <a class="nav-link" href="/auth/logout">Log out</a>
        </li>
      </ul>

    </div>
  </nav>


  <div class="container">
    <div class="main-body">

      <div class="row gutters-sm">
        <div class="col-md-4 mb-3 rounded-img">
          <div class="card">
            <div class="card-body">
              <div class="profile-pic">
                <label class="-label" for="file">
                  <span class="glyphicon glyphicon-camera"></span>
                  <span>Change Image</span>
                </label>
                <form action="/send" id="myform" method="POST" enctype="multipart/form-data">
                  <input id="file" type="file" name="profileImg" accept="image/*" />
                </form>
                {{#if user.profile_img}}
                <img src="{{user.profile_img}}" id="output" width="200" />
                {{else}}
                <img src="../avatar.png" id="output" width="200" />
                {{/if}}
              </div>

              <div class="mt-3">
                <h4>{{user.name}}


                </h4>
                <p class="text-secondary mb-1">Full Stack Developer</p>
                <p class="text-muted font-size-sm">Bay Area, San Francisco,
                  CA</p>
                <button class="btn btn-primary">Follow</button>
                <button class="btn btn-outline-primary">Message</button>
              </div>
              <div class="mt-4">

                <input form="myform" type="submit" class="btn btn-primary">

              </div>

            </div>
          </div>
          <div class="card mt-3" id="Bio">
            <h1 class="card-title mb-1 text-center text-muted">Create a Room</h1>
            <div class="mb-4 mt-5" align="center">
              <Button type="button" class="btn btn-secondary" id="roomBtn" href="#">Create</Button>
            </div>
          </div>



        </div>
        <div class="col-md-8">
          <div class="card mb-3 rounded-img ">
            <div class="card-body">
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Full Name</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  {{user.name}}
                </div>
              </div>
              <hr />
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Email</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  {{user.email}}
                </div>
              </div>
              <hr />
              <div class="row">
                <div class="col-sm-3">
                  <h6 class="mb-0">Joined</h6>
                </div>
                <div class="col-sm-9 text-secondary">
                  {{user.Joined}}
                </div>
              </div>
              <hr />


            </div>
          </div>

          <div class="col-sm-6 mb-3 row gutters-sm col-md-8">
            <div class="card h-100">
              <div class="card-body ">
                <h6 class="d-flex align-items-center mb-3">Favorite Movies</h6>
                <div class="hey" id="row">
                  <div class="image">
                    <img src="https://image.tmdb.org/t/p/w300/h9p1zxKzti35Aqe6xpwkP9NlG7p.jpg" style="width: 120px;" />
                  </div>
                  <div class="image">
                    <img src="https://image.tmdb.org/t/p/w300/h9p1zxKzti35Aqe6xpwkP9NlG7p.jpg" style="width: 120px;" />
                  </div>
                  <div class="image">
                    <img src="https://image.tmdb.org/t/p/w300/h9p1zxKzti35Aqe6xpwkP9NlG7p.jpg" style="width: 120px;" />
                  </div>
                  <div class="image">
                    <img src="https://image.tmdb.org/t/p/w300/h9p1zxKzti35Aqe6xpwkP9NlG7p.jpg" style="width: 120px;" />
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>

    </div>
  </div>

  </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
    integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
    crossorigin="anonymous"></script>
  <script src="profile.js"></script>
  <script src="indexScript.js"></script>
</body>

</html>